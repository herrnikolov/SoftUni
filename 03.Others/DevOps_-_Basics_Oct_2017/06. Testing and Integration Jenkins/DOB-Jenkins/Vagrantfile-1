# -*- mode: ruby -*-
# vi: set ft=ruby :

# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.
Vagrant.configure(2) do |config|
    
  config.ssh.insert_key = false

  config.vm.define "master" do |master|
    master.vm.box="shekeriev/centos-7-64-minimal"
    master.vm.hostname = "master.sulab.local"
    master.vm.network "private_network", ip: "192.168.82.100"
    master.vm.network "forwarded_port", guest: 80, host: 8000
    master.vm.network "forwarded_port", guest: 8080, host: 8080
    master.vm.provision "shell", path: "add_hosts.sh"
  end
  
end
