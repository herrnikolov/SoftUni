# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

  config.ssh.insert_key = false

  config.vm.define "master" do |master|
    master.vm.box="shekeriev/centos-7-64-minimal"
    master.vm.hostname = "master.sulab.local"
    master.vm.network "private_network", ip: "192.168.82.100"
    master.vm.network "forwarded_port", guest: 80, host: 8000
    master.vm.provision "shell", path: "add_hosts.sh"
  end

end
